class Solution {
public:
    double pow(double x, int n) {
        // Start typing your C/C++ solution below
        // DO NOT write int main() function
        int temp = abs(n);
        double res = 1.0;
        for(;temp; x *= x, temp = temp >> 1)
        {
            if(temp & 1)
            {
                res *= x;
            }
        }
        if(n < 0)
            return 1 / res;
        else
            return res;
    }
};
