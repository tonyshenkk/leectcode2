class Solution {
public:
    bool searchMatrix(vector<vector<int> > &matrix, int target) {
        // Start typing your C/C++ solution below
        // DO NOT write int main() function
        int row = matrix.size();
        if(row < 1)
            return false;
        int col = matrix[0].size();
        
        int low = 0, high = row * col - 1, mid, t;
        while(low <= high)
        {
            mid = (low + high) / 2;
            t = matrix[mid / col][mid % col];
            if(t == target)
                return true;
            else if(t < target)
                low = mid + 1;
            else
                high = mid - 1;
        }
        return false;
    }
};
